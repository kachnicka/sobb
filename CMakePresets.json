{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default-multi-config",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "generator": "Ninja Multi-Config"
    },
    {
      "name": "cfg-msvc",
      "displayName": "Win32: x64, msvc",
      "inherits": "default-multi-config",
      "toolchainFile": "${sourceDir}/cmake/toolchains/msvc.cmake",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "default",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "generator": "Ninja"
    },
    {
      "name": "default-gcc",
      "inherits": "default",
      "hidden": true,
      "toolchainFile": "${sourceDir}/cmake/toolchains/gcc.cmake",
      "cacheVariables": {
        "CMAKE_EXE_LINKER_FLAGS": {
          "type": "STRING",
          "value": "-fuse-ld=mold"
        },
        "CMAKE_SHARED_LINKER_FLAGS": {
          "type": "STRING",
          "value": "-fuse-ld=mold"
        },
        "CMAKE_MODULE_LINKER_FLAGS": {
          "type": "STRING",
          "value": "-fuse-ld=mold"
        }
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "default-clang",
      "inherits": "default",
      "hidden": true,
      "toolchainFile": "${sourceDir}/cmake/toolchains/clang.cmake",
      "cacheVariables": {
        "CMAKE_EXE_LINKER_FLAGS": {
          "type": "STRING",
          "value": "-fuse-ld=lld -nostdlib++ /usr/lib/libc++.a /usr/lib/libc++abi.a"
        },
        "CMAKE_SHARED_LINKER_FLAGS": {
          "type": "STRING",
          "value": "-fuse-ld=lld -nostdlib++ /usr/lib/libc++.a /usr/lib/libc++abi.a"
        },
        "CMAKE_MODULE_LINKER_FLAGS": {
          "type": "STRING",
          "value": "-fuse-ld=lld -nostdlib++ /usr/lib/libc++.a /usr/lib/libc++abi.a"
        }
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "cfg-gcc-mold-release",
      "displayName": "Linux: x64, gcc, mold (release)",
      "inherits": "default-gcc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "cfg-gcc-mold-debug",
      "displayName": "Linux: x64, gcc, mold (debug)",
      "inherits": "default-gcc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "cfg-clang-lld-release",
      "displayName": "Linux: x64, clang, lld (release)",
      "inherits": "default-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "cfg-clang-lld-debug",
      "displayName": "Linux: x64, clang, lld (debug)",
      "inherits": "default-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "msvc-release",
      "displayName": "Win32 (x64, msvc) Release",
      "configuration": "Release",
      "jobs": 0,
      "configurePreset": "cfg-msvc"
    },
    {
      "name": "msvc-debug",
      "displayName": "Win32 (x64, msvc) Debug",
      "configuration": "Debug",
      "jobs": 0,
      "configurePreset": "cfg-msvc"
    },
    {
      "name": "gcc-release",
      "displayName": "Linux (x64, gcc, mold) Release",
      "configuration": "Release",
      "jobs": 0,
      "configurePreset": "cfg-gcc-mold-release"
    },
    {
      "name": "gcc-debug",
      "displayName": "Linux (x64, gcc, mold) Debug",
      "configuration": "Debug",
      "jobs": 0,
      "configurePreset": "cfg-gcc-mold-debug"
    },
    {
      "name": "clang-release",
      "displayName": "Linux (x64, clang, lld) Release",
      "configuration": "Release",
      "jobs": 0,
      "configurePreset": "cfg-clang-lld-release"
    },
    {
      "name": "clang-debug",
      "displayName": "Linux (x64, clang, lld) Debug",
      "configuration": "Debug",
      "jobs": 0,
      "configurePreset": "cfg-clang-lld-debug"
    }
  ]
}
